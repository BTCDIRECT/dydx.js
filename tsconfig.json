{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "outDir": "dist/js",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "jest", "bluebird", "bignumber.js", "decimal.js", "luxon"],
  },
  "include": [
    "src",
  ],
  "compileOnSave": true
}
